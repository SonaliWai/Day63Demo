@using Day63Demo.Models.ViewModel
@model UserViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="bg-dark text-warning">Delete User</h1>

<form method="post" asp-action="DeleteUser" >
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>FirstName</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>LastName</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th>DateOfBirth</th>
            <td>@Model.DateOfBirth</td>
        </tr>
        <tr>
            <th>Pan</th>
            <td>@Model.Pan</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <th>MobileNumber</th>
            <td>@Model.MobileNumber</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Comments</th>
            <td>@Model.Comments</td>
        </tr>
        <tr>
            <th>DepartmentRefId</th>
            <td>@Model.DepartmentRefId</td>
        </tr>
    </table>
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Confirm Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-primary">Back to Listing</a>
</form>
